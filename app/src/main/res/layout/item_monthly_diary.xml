    <!-- 📘 일기 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/monthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dunggeunmo"
                android:text="@string/year_month_text"
                android:textColor="@color/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/diaryCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/font"
                android:text="@string/written_diary_text"
                android:textColor="@color/colorOnSurface"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/diaryPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/font"
                android:text="이번 달 개근율: 90%"
                android:textColor="@color/colorOnSurface"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/emotionSummaryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/font"
                android:text="가장 많이 느낀 감정: 😢 슬픔"
                android:textColor="@color/colorOnSurface"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tarotSummaryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/font"
                android:text="가장 많이 뽑은 타로: 🌟 별 카드"
                android:textColor="@color/colorOnSurface"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/emotionFlowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/font"
                android:text="감정 변화: 평온 → 분노 → 회복"
                android:textColor="@color/colorOnSurface"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/badgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/font"
                android:text="🎖 7일 연속 일기 작성!"
                android:textColor="@color/colorOnSurface"
                android:textSize="14sp" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
